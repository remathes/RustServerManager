<Window x:Class="RustUpdate.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" WindowStartupLocation="CenterScreen" Topmost="True" Top="1"
        MinWidth="570"
        MaxWidth="570"
        MinHeight="220"
        MaxHeight="220"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/settings.ico"
        >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="110 10 10 10">
            <CheckBox x:Name="AutoUpdateCheckBox" Content="Enable automatic update check"
                      Style="{StaticResource MaterialDesignCheckBox}"
              VerticalAlignment="Center" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="SteamCMD Path:" Width="120"/>
            <TextBox x:Name="SteamPathBox" Width="300"/>
            <Button Content="Browse" Click="BrowseSteam_Click" Width="100" Margin="10 0 0 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 10">
            <Label Content="Rust Server Path:" Width="120"/>
            <TextBox x:Name="RustPathBox" Width="300"/>
            <Button Content="Browse" Click="BrowseRust_Click" Width="100" Margin="10 0 0 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Content="Save" Click="Save_Click" Width="75" Margin="0 0 10 0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
