<Window x:Class="RustUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Rust Server Install / Update"
        ResizeMode="CanMinimize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/mainwindow.ico"
        Background="Transparent"
        Topmost="True">
    <Window.Resources>
        <DropShadowEffect x:Key="LavaGlowEffect"
          BlurRadius="80"
          Color="OrangeRed"
          ShadowDepth="0"
          Opacity="0.6" />

        <Style x:Key="LavaCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Effect" Value="{StaticResource LavaGlowEffect}" />
        </Style>
        <Style x:Key="RustButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#BF360C" Offset="0"/>
                        <GradientStop Color="#A33E12" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#99000000" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#8B3A00"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <materialDesign:Card Padding="8" Margin="15" 
                         Style="{StaticResource LavaCardStyle}"
                         materialDesign:UniformCornerRadius="5" 
                         materialDesign:ElevationAssist.Elevation="Dp2"
                         >
        <materialDesign:Card.Background>

            <ImageBrush ImageSource="pack://application:,,,/RustUpdate;component/Assets/RustySilver.png"
                    Stretch="UniformToFill"/>
        </materialDesign:Card.Background>
        <Grid>
            <materialDesign:Card Opacity="0.8" Padding="8" Margin="16" materialDesign:ElevationAssist.Elevation="Dp2" materialDesign:UniformCornerRadius="5">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Version Info -->
                <TextBlock Grid.Row="0" Grid.Column="0" x:Name="RustVersionLabel" Margin="5" Style="{StaticResource MaterialDesignHeadlineSmallTextBlock}"/>
                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="RustCurrentVersionLabel" Style="{StaticResource MaterialDesignHeadlineSmallTextBlock}" Margin="5"/>
                <Button MinHeight="50" MinWidth="300"  Grid.Row="2" Grid.Column="0" x:Name="UpdateRustButton" Click="UpdateRust_Click" 
                    Style="{StaticResource RustButtonStyle}"
                    Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Download" Width="20" Margin="0 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Update Rust" Style="{StaticResource MaterialDesignBody1TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="OxideVersionLabel" Style="{StaticResource MaterialDesignHeadlineSmallTextBlock}" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="OxideCurrentVersionLabel" Style="{StaticResource MaterialDesignHeadlineSmallTextBlock}" Margin="5"/>
                <Button MinHeight="50" MinWidth="300" Grid.Row="2" Grid.Column="1" x:Name="UpdateOxideButton" Click="UpdateOxide_Click" 
                    Style="{StaticResource RustButtonStyle}"
                    Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloudDownload" Width="20" Margin="0 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Update Oxide" Style="{StaticResource MaterialDesignButtonTextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="3" MinHeight="50" MaxWidth="260" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Click="OpenSettings_Click" Margin="5" Style="{StaticResource RustButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog" Width="20" Margin="0 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Settings" Style="{StaticResource MaterialDesignBody1TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>
            <Grid x:Name="OverlayGrid" Background="Black"
          Opacity="0.8"
        Panel.ZIndex="99">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80">
                    <mah:ProgressRing IsActive="True" Width="48" Height="48" Foreground="LimeGreen" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                    <TextBlock x:Name="RustStatusLabel" Margin="10" 
            Foreground="White"
            MinWidth="300"
            FontWeight="SemiBold" 
            FontSize="16" 
            TextWrapping="Wrap"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
    <!-- Loading Overlay -->
</Window>