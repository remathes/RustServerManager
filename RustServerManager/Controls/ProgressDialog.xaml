<UserControl x:Class="RustServerManager.Controls.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel Margin="20" Width="300">
        <TextBlock Text="{Binding Message}" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 10"/>
        <ProgressBar IsIndeterminate="True" Height="6"/>
    </StackPanel>
</UserControl>