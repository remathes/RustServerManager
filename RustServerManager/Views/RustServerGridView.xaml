<UserControl x:Class="RustServerManager.Views.RustServerGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:RustServerManager.Controls"
             xmlns:views="clr-namespace:RustServerManager.Views"
             xmlns:converters="clr-namespace:RustServerManager.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">
    <UserControl.Resources>
        <converters:RustProcessStatusBrushConverter x:Key="RustStatusBrushConverter"/>
        <DropShadowEffect x:Key="LavaGlowEffect"
                  BlurRadius="80"
                  Color="OrangeRed"
                  ShadowDepth="0"
                  Opacity="0.6" />

        <Style x:Key="LavaCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Effect" Value="{StaticResource LavaGlowEffect}" />
        </Style>
        <Style x:Key="RustButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#BF360C" Offset="0"/>
                        <GradientStop Color="#A33E12" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#99000000" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#8B3A00"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- fill remaining -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <materialDesign:Card Padding="5"
                             x:Name="ForgeCard"
                     Margin="5"
                     materialDesign:ElevationAssist.Elevation="Dp2"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Top"
                     materialDesign:UniformCornerRadius="10"
                             Style="{StaticResource LavaCardStyle}"
                     Height="120">
            <materialDesign:Card.Background>

                <ImageBrush ImageSource="pack://application:,,,/RustServerManager;component/Assets/RustySilver.png"
                    Stretch="UniformToFill"/>
            </materialDesign:Card.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 🔩 Top Left -->
                <Image Source="/Assets/bolt.png"
               Width="32" Height="32"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="2" Grid.Column="0"
               RenderTransformOrigin="0.5,0.5"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <RotateTransform/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Image.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                             From="0" To="360" Duration="0:0:20" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>

                <!-- 🔩 Top Right -->
                <Image Source="/Assets/bolt.png"
               Width="32" Height="32"
               HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="2" Grid.Column="2"
               RenderTransformOrigin="0.5,0.5"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <RotateTransform/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Image.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                             From="360" To="0" Duration="0:0:22" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>

                <!-- 🔩 Bottom Left -->
                <Image Source="/Assets/bolt.png"
               Width="32" Height="32"
               HorizontalAlignment="Left" VerticalAlignment="Bottom"
               Margin="2" Grid.Column="0"
               RenderTransformOrigin="0.5,0.5"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <RotateTransform/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Image.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                             From="0" To="360" Duration="0:0:21" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>

                <!-- 🔩 Bottom Right -->
                <Image Source="/Assets/bolt.png"
               Width="32" Height="32"
               HorizontalAlignment="Right" VerticalAlignment="Bottom"
               Margin="2" Grid.Column="2"
               RenderTransformOrigin="0.5,0.5"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.RenderTransform>
                        <RotateTransform/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Image.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                             From="360" To="0" Duration="0:0:23" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>

                <!-- 🎛️ Center Toolbar -->
                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Column="1"
                    Margin="0">
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Plus}" Command="{Binding NewCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Play}" Command="{Binding StartCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Stop}" Command="{Binding StopCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Restart}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Pencil}" Command="{Binding EditCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Trash}" Command="{Binding DeleteCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon Kind=ConsoleNetwork}"
                    ToolTip="Connect to Console"
                    Command="{Binding ConnectToConsoleCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon ArrowBack}" Command="{Binding BackInstanceCommand}" Margin="4"/>
                    <Button Style="{StaticResource RustButtonStyle}" Content="{materialDesign:PackIcon ArrowForward}" Command="{Binding NextInstanceCommand}" Margin="4"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <!-- Card around DataGrid -->
        <ContentControl Padding="5" Grid.Row="1" Content="{Binding SelectedPage}" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>