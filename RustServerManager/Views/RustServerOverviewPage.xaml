<UserControl x:Class="RustServerManager.Views.RustServerOverviewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:RustServerManager.Converters"
             xmlns:local="clr-namespace:RustServerManager.Views"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="Transparent"
             >

    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
        <converters:BooleanToStatusTextConverter x:Key="RustRunningStatusText"
                                         ConnectedText="Online"
                                         DisconnectedText="Offline" />
        <converters:BannerImageConverter x:Key="BannerImageConverter" />
        <converters:RustProcessStatusBrushConverter x:Key="RustStatusBrushConverter"/>
        <DropShadowEffect x:Key="LavaGlowEffect"
                  BlurRadius="80"
                  Color="OrangeRed"
                  ShadowDepth="0"
                  Opacity="0.6" />

        <Style x:Key="LavaCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Effect" Value="{StaticResource LavaGlowEffect}" />
        </Style>
        <Style x:Key="RustButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignSwitchToggleButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#BF360C" Offset="0"/>
                        <GradientStop Color="#A33E12" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#99000000" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#8B3A00"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Banner -->

        <materialDesign:Card x:Name="ForgeCard" Grid.Row="0" Grid.Column="0" Padding="5" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2"
                             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource LavaCardStyle}"
                             materialDesign:UniformCornerRadius="10">
            <materialDesign:Card.Background>
                <ImageBrush ImageSource="pack://application:,,,/RustServerManager;component/Assets/RustySilver.png"
                    Stretch="UniformToFill"/>
            </materialDesign:Card.Background>
            <materialDesign:Card Opacity="0.8" Padding="8" Margin="8" materialDesign:ElevationAssist.Elevation="Dp2" materialDesign:UniformCornerRadius="10">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Grid.Column="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        ClipToBounds="True"
        CornerRadius="10"
        Margin="10">
                        <Image Source="{Binding BannerImagePath, Converter={StaticResource BannerImageConverter}}"
           Stretch="Uniform"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch" />
                    </Border>
                    <StackPanel Grid.Row="1"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"
            >

                        <!-- 🔄 Auto Start -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                            <ToggleButton x:Name="AutoStart"
                      Width="48"
                      IsChecked="{Binding AutoStart, Mode=TwoWay}"
                      Style="{StaticResource RustButtonStyle}"
                      Margin="0,0,6,0" />
                            <TextBlock Text="Auto Start"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Style="{StaticResource MaterialDesignButtonTextBlock}" />
                        </StackPanel>

                        <!-- 🔁 Auto Update -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                            <ToggleButton x:Name="AutoUpdate"
                      Width="48"
                      IsChecked="{Binding AutoUpdate, Mode=TwoWay}"
                      Style="{StaticResource RustButtonStyle}"
                      Margin="0,0,6,0" />
                            <TextBlock Text="Auto Update"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Style="{StaticResource MaterialDesignButtonTextBlock}" />
                        </StackPanel>

                        <!-- 🟢 Online Status -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon x:Name="RustStatusIcon"
                                 Kind="NetworkOutline"
                                 Width="24" Height="24" Margin="0,0,6,0"
                                 Foreground="{Binding IsRunning, Converter={StaticResource BooleanToBrushConverter}}">
                                <materialDesign:PackIcon.RenderTransform>
                                    <ScaleTransform />
                                </materialDesign:PackIcon.RenderTransform>
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                <Setter Property="Foreground" Value="LimeGreen"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                         From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" />
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                         From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>

                            <TextBlock Style="{StaticResource MaterialDesignButtonTextBlock}"
                   FontSize="12"
                   VerticalAlignment="Center"
                   Text="{Binding IsRunning, Converter={StaticResource RustRunningStatusText}}"
                   Foreground="{Binding IsRunning, Converter={StaticResource BooleanToBrushConverter}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </materialDesign:Card>
        <materialDesign:Card Padding="5" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2"
        Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"
                            Style="{StaticResource LavaCardStyle}"
                             materialDesign:UniformCornerRadius="10">
            <materialDesign:Card.Background>
                <ImageBrush ImageSource="pack://application:,,,/RustServerManager;component/Assets/RustySilver.png"
                    Stretch="UniformToFill"/>
            </materialDesign:Card.Background>
            <materialDesign:Card Opacity="0.8" Padding="8" Margin="8" materialDesign:ElevationAssist.Elevation="Dp2" materialDesign:UniformCornerRadius="10">
            <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Host Name:" VerticalAlignment="Center" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}" />
                    <TextBlock Text="{Binding ServerHostname}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}" />
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Last Wiped" FontWeight="SemiBold"  FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding LastWiped ,StringFormat=MM/dd/yyyy}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Server IP:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding ServerIp}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Server Port:" FontWeight="SemiBold" FontSize="12"  VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding ServerPort}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="RCON IP:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding RconIp}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="RCON Port:" FontWeight="SemiBold" FontSize="12"  VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding RconPort}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                    <TextBlock Text="Level:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding Level}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                    <TextBlock Text="Map Name:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding MapName}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="World Size:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding WorldSize}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                    <TextBlock Text="Seed:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding Seed}" FontSize="12" Margin="4" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="5" Grid.Column="0">
                    <TextBlock Text="Max Players:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding MaxPlayers}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="5" Grid.Column="1">
                    <TextBlock Text="Uptime:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                    <TextBlock Text="{Binding Uptime}" FontSize="12" Margin="5" VerticalAlignment="Center" Style="{StaticResource MaterialDesignTextBlock}"/>
                </StackPanel>
            </Grid>
                </materialDesign:Card>
        </materialDesign:Card>
        <!-- Gauges Area -->
        <materialDesign:Card Padding="5" Margin="5" materialDesign:ElevationAssist.Elevation="Dp2"
                              Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource LavaCardStyle}"
                             materialDesign:UniformCornerRadius="10">
            <materialDesign:Card.Background>
                <ImageBrush ImageSource="pack://application:,,,/RustServerManager;component/Assets/RustySilver.png"
                    Stretch="UniformToFill"/>
            </materialDesign:Card.Background>
            <materialDesign:Card Opacity="0.8" Padding="8" Margin="8" materialDesign:ElevationAssist.Elevation="Dp2" materialDesign:UniformCornerRadius="10">
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top"  HorizontalAlignment="Stretch">
                    <StackPanel MinWidth="200" MinHeight="200" Margin="5"
            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Chart column -->
                            <Grid Grid.Column="0">
                                <!-- Hide built-in legend -->
                                <lvc:PieChart
                Series="{Binding CpuGaugeSeries}"
                MaxAngle="270"
                InitialRotation="135"
                LegendPosition="Hidden"
                TooltipPosition="Hidden"
                Background="Transparent"
                MinWidth="200"
                MinHeight="200" />

                                <!-- Centered label -->
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CpuPercentText}"
                           FontSize="12"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           HorizontalAlignment="Center" />
                                    <TextBlock Text="CPU"
                           FontSize="12"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,2,0,0" />
                                </StackPanel>
                            </Grid>

                            <!-- Manual legend -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="LimeGreen" Margin="0,0,4,0"/>
                                    <TextBlock Text="Low" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Gold" Margin="0,0,4,0"/>
                                    <TextBlock Text="Medium" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Orange" Margin="0,0,4,0"/>
                                    <TextBlock Text="High" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Crimson" Margin="0,0,4,0"/>
                                    <TextBlock Text="Max" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="LightGray" Margin="0,0,4,0"/>
                                    <TextBlock Text="Na" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel MinWidth="200" MinHeight="200" Margin="5"
            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Chart column -->
                            <Grid Grid.Column="0">
                                <!-- Hide built-in legend -->
                                <lvc:PieChart
                Series="{Binding RamGaugeSeries}"
                MaxAngle="270"
                InitialRotation="135"
                LegendPosition="Hidden"
                TooltipPosition="Hidden"
                Background="Transparent"
                MinWidth="200"
                MinHeight="200" />

                                <!-- Centered label -->
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding RamDisplayText}"
                           FontSize="12"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           HorizontalAlignment="Center" />
                                    <TextBlock Text="RAM"
                           FontSize="12"
                           Style="{StaticResource MaterialDesignButtonTextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,2,0,0" />
                                </StackPanel>
                            </Grid>

                            <!-- Manual legend -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="LimeGreen" Margin="0,0,4,0"/>
                                    <TextBlock Text="Low" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Gold" Margin="0,0,4,0"/>
                                    <TextBlock Text="Medium" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Orange" Margin="0,0,4,0"/>
                                    <TextBlock Text="High" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="Crimson" Margin="0,0,4,0"/>
                                    <TextBlock Text="Max" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,7">
                                    <Ellipse Width="12" Height="12" Fill="LightGray" Margin="0,0,4,0"/>
                                    <TextBlock Text="Na" FontSize="12" Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </materialDesign:Card>
    </Grid>
</UserControl>